   S30 -> S31 [label="Synchronized"];
   S31 -> S31 [label=" X(T3)"];
   S31 -> S32 [label="No Reading"];


   // Navigation Laser Readings FSM
   S40 [label="(ENTRY)Pre-Sync"];
   S41 [label="Data Bus Tx:\nLaser Readings"];
